# NPM Configuration - Optimized for Development
# Registry Configuration
registry=https://registry.npmjs.org/
progress=true
color=always

# Security Settings
audit-level=moderate
fund=false

# Performance Optimization
cache-min=86400
prefer-offline=false
engine-strict=true
save-exact=true

# Logging and Output
loglevel=warn
unicode=true

# Installation Preferences
save=true
save-dev=false
package-lock=true
package-lock-only=false

# Network Settings
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-timeout=300000

# Development Settings
init-author-name=
init-author-email=
init-license=MIT
init-version=1.0.0

# Enterprise/Mirror Support (examples - to be configured per environment)
# @company:registry=https://npm.company.com/
# //npm.company.com/:_authToken=${NPM_COMPANY_TOKEN}

# Scoped Registry Examples
# @types:registry=https://registry.npmjs.org/
# @babel:registry=https://registry.npmjs.org/

# Proxy Settings (uncomment if needed)
# proxy=http://proxy.company.com:8080
# https-proxy=http://proxy.company.com:8080
# noproxy=localhost,127.0.0.1

# CI/CD Compatibility
ci=false 